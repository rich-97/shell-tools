#!/usr/bin/env bash
 
list=${PATH//:/' '}
list=${list//\}/' '}
list=${list//\{/' '}

color () {
  if [ -z "$1" ]; then
    tput setaf 1
  else
    tput setaf "$1"
  fi
}

lsbin () {
  sum=0
  for i in $list; do
    if [ -d "$i" ]; then
      files=$(ls -R "$i")
      
      for j in $files; do
        if [ -x "$i/$j" -a -f "$i/$j" ]; then
          kb="$(du -k "$i/$j" | cut -f 1 )"
          let sum+=1
          color 2; echo -n "$j: "
          color 3; echo "${kb}kb"
        fi
      done
    else
      color; echo "Directory not valid."
    fi
  done

  color 6; echo "total: $sum"
}

lsbin

